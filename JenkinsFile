node {
    nodejs(nodeJSInstallationName: 'default') {
        stage 'Checkout'
            checkout scm
            sh 'npm install'
        stage 'Lint'
            sh './node_modules/@angular/cli/bin/ng lint'
        stage 'Test'
            sh 'npm install'
            sauce('e75a1b30-bdd4-48f5-8947-acba29c8df9c') {
                sh './node_modules/@angular/cli/bin/ng test  --browsers SL_Chrome --watch=false --reporters saucelabs'
            }
    }
}
